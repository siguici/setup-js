{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "files": {
    "ignoreUnknown": false,
    "ignore": [".git", "dist", "node_modules"]
  },

  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 80
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "enabled": true,
      "jsxQuoteStyle": "single",
      "quoteProperties": "preserve",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "none"
    },
    "globals": ["Bun", "Deno"]
  },

  "json": {
    "formatter": {
      "enabled": true
    }
  },

  "linter": {
    "enabled": true,
    "include": ["bin", "src", "tests"],
    "rules": {
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "recommended": true,
      "style": {
        "recommended": true,
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "recommended": true
      }
    }
  },

  "organizeImports": {
    "enabled": true
  },

  "overrides": [
    {
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    }
  ],

  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  }
}
